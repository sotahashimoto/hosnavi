<table class="comment-s-table-form">
  <% @comments.each do |comment| %>
    <tr>
      <td>
        <%= attachment_image_tag comment.member, :image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg", class: "comment-s-image" %>
      </td>
      <td>
        <span class="comment-s-nickname-word_of_mouth">
          <%= comment.member.nickname %><span class="comment-s-word_of_mouth">さんの口コミ</span>
        </span>
      </td>
      <td>
        <% if comment.score == 1 %>
          <span class="star-rating-front1" style="width: <%= comment.score %>%">★</span><span class="star-rating-back">★★★★</span>
        <% elsif comment.score == 2 %>
          <span class="star-rating-front2" style="width: <%= comment.score %>%">★★</span><span class="star-rating-back">★★★</span>
        <% elsif comment.score == 3 %>
          <span class="star-rating-front3" style="width: <%= comment.score %>%">★★★</span><span class="star-rating-back">★★</span>
        <% elsif comment.score == 4 %>
          <span class="star-rating-front4" style="width: <%= comment.score %>%">★★★★</span><span class="star-rating-back">★</span>
        <% else comment.score == 5 %>
          <span class="star-rating-front5" style="width: <%= comment.score %>%">★★★★★</span>
        <% end %>
        <%= comment.score %>点
      </td>
      <td class="td_comment_created_at_strftime">
        <span class="comment_created_at_strftime">
          <%= comment.created_at.strftime("%Y年%m月投稿") %>
        </span>
      </td>
      <%# いいね機能 非同期 %>
      <td class=<%= "like-" + comment.id.to_s %>>
        <%= render partial: "favorite", locals: { comment: comment } %>
      </td>
    </tr>

    <tr>
      <td></td>
      <td colspan="3"><%= comment.content %></td>
    </tr>
  <% end %>
</table>

<span class="comment-s-form_responsive">
  <% @comments.each do |comment| %>
    <%= attachment_image_tag comment.member, :image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg", class: "comment-s-image" %>
