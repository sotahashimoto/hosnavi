        <span class="star-rating-front2" style="width: <%= comment.score %>%">★★</span><span class="star-rating-back">★★★</span>
      <% elsif comment.score == 3 %>
        <span class="star-rating-front3" style="width: <%= comment.score %>%">★★★</span><span class="star-rating-back">★★</span>
      <% elsif comment.score == 4 %>
