<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <%= form_with model: @hospital, url: admin_hospitals_path, local: true do |f| %>
        <div class="form-group">
          <%= f.text_field :name, placeholder: "病院名", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_field :postcode, placeholder: "郵便番号", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_field :address, placeholder: "住所", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.telephone_field :phone_number, placeholder: "電話番号", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_area :feature, placeholder: "特徴", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_area :short_message, placeholder: "一言メッセージ", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_area :notices, placeholder: "特記事項", class: "form-control" %>
        </div>
        <%= f.attachment_field :image, placeholder: "画像" %>

        <%# 診療科目、診療日時 部分テンプレート %>
        <%= render 'form_content', f: f %>

        <%= f.submit "投稿", class: "login-admin-submit btn btn-primary" %>
      <% end %>
    </div>

    <div class="col-md-3">
    </div>
  </div>
</div>