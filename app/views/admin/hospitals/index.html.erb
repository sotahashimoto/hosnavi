<div class="container">
  <div class="row">
    <div class="admin_hospital_consultation_dayAdd">
      <span class="admin_hospitalAdd">
        <i class="fas fa-hospital-alt"></i>
        <%= link_to "病院追加", new_admin_hospital_path, {class: "admin_hospital-index-link"} %>
        <i class="fas fa-hospital-user"></i>
        <%= link_to "会員側病院一覧", hospitals_path %>
      </span>
      <span class="admin_consultation_dayAdd">
        <i class="far fa-calendar-alt"></i>
        <%= link_to "診療日追加", admin_consultation_days_path, {class: "admin_hospital-index-link"}  %>
      </span>
    </div>

    <table>
      <% @hospitals.each do |hospital| %>
        <tr>
          <td class="admin_hospital_image"><%= attachment_image_tag hospital, :image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %></td>
          <td class="admin_hospital_name"><%= link_to hospital.name, admin_hospital_path(hospital) %></td>
          <td class="admin_hospital_postcode"><%= hospital.postcode %></td>
          <td class="admin_hospital_address"><%= hospital.address %></td>
          <td><%= hospital.phone_number %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>