<div class="container">
  <div class="row">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="col-md-4">
      </div>

      <div class="col-md-4">
        <div class="login">
          <h2>管理者ログイン</h2>
        </div>

        <div class="form-group">
          <div class="field">
            <%= f.label :メールアドレス %><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :次回から自動的にログイン %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "login-submit btn btn-primary" %>
        </div>
      </div>
    <% end %>

    <div class="col-md-4">
    </div>
  </div>
</div>
