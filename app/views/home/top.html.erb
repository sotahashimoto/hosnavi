              <% end %>
            </td>
          </tr>

          <tr>
            <th class="home-area-th">東海</th>
            <td class="home-area-td">
              <% ["岐阜", "静岡", "愛知", "三重"].each do |area| %>
                <%= link_to "#{area}", search_path(search_address: "#{area}"), {class: "home-area-link"} %>
              <% end %>
            </td>
          </tr>

          <tr>
            <th class="home-area-th">近畿</th>
            <td class="home-area-td">
              <% ["滋賀", "京都", "大阪", "兵庫", "奈良", "和歌山"].each do |area| %>
                <%= link_to "#{area}", search_path(search_address: "#{area}"), {class: "home-area-link"} %>
              <% end %>
            </td>
          </tr>

          <tr>
            <th class="home-area-th">中国</th>
            <td class="home-area-td">
              <% ["鳥取", "島根", "岡山", "広島", "山口"].each do |area| %>
                <%= link_to "#{area}", search_path(search_address: "#{area}"), {class: "home-area-link"} %>
              <% end %>
            </td>
          </tr>

          <tr>
            <th class="home-area-th">四国</th>
            <td class="home-area-td">
              <% ["徳島", "香川", "愛媛", "高知"].each do |area| %>
                <%= link_to "#{area}", search_path(search_address: "#{area}"), {class: "home-area-link"} %>
              <% end %>
            </td>
          </tr>

          <tr class="aaa">
            <th class="home-area-th">九州・沖縄</th>
            <td class="home-area-td">
              <% ["福岡", "佐賀", "長崎", "熊本", "大分", "宮崎", "鹿児島", "沖縄"].each do |area| %>
                <%= link_to "#{area}", search_path(search_address: "#{area}"), {class: "home-area-link"} %>
              <% end %>
            </td>
          </tr>
        </table>
      </div>

      <div class="col-md-6 area-img">
      </div>
    </div>
  </div>
</div>